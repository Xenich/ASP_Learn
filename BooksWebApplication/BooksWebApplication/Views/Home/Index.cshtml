@{
    ViewBag.Title = "Книжный магазин";    // заголовок
}

<div>
    <h3></h3>
    <table>
        <tr>
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td><p>Купить</p></td>
        </tr>
    @foreach (var book in ViewBag.Books)
    {
        <tr>
            <td><p>@book.Name</p></td>
            <td><p>@book.Author</p></td>
            <td><p>@book.Price</p></td>
            <td><p><a href="/Home/Buy
                      /@book.id">Купить</a></p></td>   @* Ссылка на покупку книги  - обращение к контроллеру HomeController, в котором определен метод Buy и передача в него Id *@
            </tr>
        }
        </table>
    </div>


























