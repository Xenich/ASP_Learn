@* ПЕРЕДАЧА МОДЕЛИ В ПРЕДСТАВЛЕНИЕ*@
@using ASPNET_Core_MVC_MODELS.Models   @* //Подключаем пространство имён, в котором расположен класс этой модели*@
@model Game         // Указываем какого типа будет передаваемая модель - Game


<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@Model.Name</title>       @* К модели обращаемся по ключевому слову Model, а не по имени экземпляра или класса *@
    </head>

    <body>
        <h2>SingleModel</h2>
        <h3>Game: @Model.Name</h3>
        <h3>Platform: @Model.Platform</h3>
        <h3>Engine: @Model.Engine</h3>
    </body>
</html>


